<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:elevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageview"
                    android:scaleType="fitXY"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pizza1">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/namefood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burger King"
                android:layout_toRightOf="@id/cv"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                >
            </TextView>
            <TextView
                android:id="@+id/ordernumtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order number: "
                android:layout_toRightOf="@id/cv"
                android:layout_below="@id/namefood"
                android:textColor="#393232"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                >
            </TextView>
            <TextView
                android:id="@+id/ordernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:layout_toRightOf="@id/ordernumtext"
                android:layout_below="@id/namefood"
                android:textColor="#190D0D"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                >
            </TextView>

            <TextView
                android:id="@+id/pricetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:layout_toRightOf="@id/cv"
                android:layout_below="@id/ordernum"
                android:textColor="#393232"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                >
            </TextView>
            <TextView
                android:id="@+id/priceicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_toRightOf="@id/pricetext"
                android:layout_below="@id/ordernum"
                android:textColor="#F6DF18"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                >
            </TextView>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_toRightOf="@id/priceicon"
                android:layout_below="@id/ordernum"
                android:textColor="#F6DF18"
                android:textSize="16dp"
                >
            </TextView>
            <TextView
                android:id="@+id/quantitytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:layout_toRightOf="@id/price"
                android:layout_below="@id/ordernum"
                android:textColor="#3A3333"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                >
            </TextView>
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_toRightOf="@id/quantitytext"
                android:layout_below="@id/ordernum"
                android:textColor="#0B0909"
                android:textSize="15dp"
                >
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>