<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/pizza1"
        
        android:scaleType="fitXY">
    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_below="@id/image">
            <TextView
                android:id="@+id/foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burger King"
                android:textColor="#F6DF18"
                android:textSize="25dp">

            </TextView>
            <TextView
                android:id="@+id/foodpriceicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_below="@id/foodname"
                android:textColor="#F6DF18"
                android:textSize="20dp">

            </TextView>
            <TextView
                android:id="@+id/foodprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_below="@id/foodname"
                android:layout_toRightOf="@id/foodpriceicon"
                android:textColor="#F6DF18"
                android:textSize="20dp">

            </TextView>
            `     <LinearLayout
            android:id="@+id/layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:text="-"
                android:textSize="20dp"
                android:background="#F6DF18">
            </androidx.appcompat.widget.AppCompatButton>
            <TextView
                android:id="@+id/calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:text="+"
                android:textSize="20dp"
                android:background="#F6DF18">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"

                android:orientation="vertical">
                <TextView
                    android:id="@+id/descrip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Soco Nunez, Burger King UK's marketing director, said: In a world of fake news, people find it hard to believe the incredible taste of the Whopper can be that simple, but it really is. At Burger King we pride ourselves on being transparent with customers, and offering them great-tasting food, so, we won't be keeping any secrets about our delicious burgers "
                    android:textColor="@color/black"
                    >

                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="20dp"
                    app:cardUseCompatPadding="true"
                    app:elevation="0dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fill your infomation"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:gravity="center_horizontal">

                        </TextView>
                        <EditText
                            android:id="@+id/nameuser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="kim chi..."
                            android:layout_margin="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:textSize="16dp"
                            android:textColorHint="#776B6B"
                            android:textColor="@color/black"
                            android:background="@drawable/round_outline">

                        </EditText>
                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="+84 374635273"
                            android:layout_margin="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:inputType="phone"
                            android:paddingTop="5dp"
                            android:textSize="16dp"
                            android:textColorHint="#776B6B"
                            android:textColor="@color/black"
                            android:background="@drawable/round_outline">

                        </EditText>
                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phu Thanh, Quan Hoa, Thanh Hoa"
                            android:textColorHint="#776B6B"
                            android:layout_margin="10dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:background="@drawable/round_outline">

                        </EditText>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_below="@id/layout2"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:textColor="@color/black"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:textColor="@color/black"
                    android:text="$"
                    >
                </TextView>
                <TextView
                    android:id="@+id/subprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/black"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout4"
                android:layout_below="@id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping"
                    android:textColor="@color/black"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:text="$"
                    android:textColor="@color/black"
                    >
                </TextView>
                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@color/black"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout5"
                android:layout_below="@id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="#F6DF18"
                    android:textSize="18dp"
                    >

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:text="$"
                    android:textColor="#F6DF18"
                    android:textSize="18dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="207"
                    android:textColor="#F6DF18"
                    android:textSize="18dp"
                    >
                </TextView>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt"
                android:layout_below="@id/layout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place an Order"
                android:background="@drawable/roundbutton"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:layout_marginBottom="10dp"
                >

            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>